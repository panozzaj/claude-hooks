#!/bin/bash
# Log hook parameters to stderr for visibility

echo "==================== HOOK DEBUG START ====================" >&2
echo "Tool: PostToolUse" >&2
echo "PWD: $(pwd)" >&2
echo "Date: $(date)" >&2
echo "" >&2
echo "STDIN JSON:" >&2
cat | tee /dev/stderr
echo "" >&2
echo "==================== HOOK DEBUG END =======================" >&2

exit 0
